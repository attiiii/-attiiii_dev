---
import Layout from "@/layouts/Layout.astro";
import { getBlogs, getBlogDetail } from "@/libs/microcms";
import dayjs from "dayjs";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);
---

<Layout title={blog.title + " | @attiiii_dev"}>
  <main class="mx-auto mb-[15rem] mt-3 max-w-[1440px] px-20">
    <article>
      <div class="mb-20 text-center">
        <h1 class="text-4xl font-bold leading-[1.5] text-gray-800">
          {blog.title}
        </h1>
        <p class="text-gray-400">
          {dayjs(blog.publishedAt).format("YYYY年M月D日")}公開
        </p>
      </div>
      <div class="post" set:html={blog.content} />
    </article>
  </main>
</Layout>

<style>
  .post {
    > *:first-child {
      margin-top: 0;
    }
    h1 {
      font-size: 1.75rem;
      margin-top: 4rem;
      margin-bottom: 1.5rem;
    }
    h2 {
      font-size: 1.5rem;
      margin-top: 3rem;
      margin-bottom: 1.5rem;
    }
    h3 {
      font-size: 1.25rem;
      margin-top: 2.875rem;
      margin-bottom: 0.625rem;
    }
    h4 {
      font-size: 1.125rem;
      margin-top: 2.5rem;
      margin-bottom: 0.5rem;
    }
    h5 {
      font-size: 1rem;
      margin-top: 2rem;
      margin-bottom: 0.5rem;
    }
    p {
      + p {
        margin-top: 1.5rem;
      }
    }
    img {
      max-width: 50%;
      height: auto;
      margin-top: 1.5rem;
      margin-bottom: 1.5rem;
    }
    pre {
      font-size: 0.825rem;
      color: white;
      background-color: rgb(15 23 42);
      margin-top: 1.25rem;
      margin-bottom: 1.25rem;
      padding: 1.125rem;
    }
    h1,
    h2 {
      border-bottom: 1px solid rgb(156 163 175);
    }
    h1,
    h2,
    h3,
    h4,
    h5 {
      font-weight: bold;
      + p {
        margin-top: 1rem;
      }
    }
  }
</style>
