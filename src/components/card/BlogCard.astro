---
import dayjs from "dayjs";
import relativeTime from "dayjs/plugin/relativeTime";
import "dayjs/locale/ja";

dayjs.locale("ja");
dayjs.extend(relativeTime);

interface Props {
  id: string;
  title: string;
  createdAt: string;
}

const { id, title, createdAt } = Astro.props;
---

<a href={"/blogs/" + id} class="block">
  <div class="relative overflow-hidden rounded px-5 py-9 shadow-lg">
    <span class="font-bold">{title}</span>
    <div
      class="absolute bottom-0 right-0 flex h-9 w-20 items-center justify-center text-sm text-gray-400"
    >
      {dayjs(createdAt).fromNow()}
    </div>
  </div>
</a>
